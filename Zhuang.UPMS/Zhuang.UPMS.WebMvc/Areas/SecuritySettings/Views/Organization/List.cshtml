
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout_Main_Tab.cshtml";
}


@section scripts{

    <script type="text/javascript">

        jQuery(function () {
            if (!jQuery("#hiParentId").val())
            {
                jQuery("#aAdd").hide();
            }

            $dg1 = $('#dg1');

            $dg1.datagrid({
                url: '@Url.Content("~/Common/EasyUI/GetPage")',
                columns: [[
                    { field: 'OrganizationId', title: 'OrganizationId', width: 100, hidden: true },
                    { field: 'Name', title: '部门名', width: 200, halign: "center" },
                    { field: 'Code', title: '部门编码', width: 200, halign: "center" }
                ]],
                //data: [{ "code": "1", "name": "2", "price": "3" },
                //    { "code": "1", "name": "2", "price": "3" }],
                //title: '产品列表',
                //iconCls: 'icon-edit',
                border: false,
                striped: true,
                height: 300,
                pagination: true,
                fit: true,
                rownumbers: true,
                singleSelect: true,
                idField: 'OrganizationId',
                pageSize: 20,
                pageList: [10, 20, 30, 50, 100, 1000, 5000, 10000],
                toolbar: "#dg1Toolbar",
                queryParams: $.extend({ sql: "SecuritySettings.Organization.List", orderby: "OrganizationId" },
                    $(document.forms["filter"]).serializeJsonFilter())
            });

        });

        function f_Search() {
            $dg1.datagrid("reload", $(document.forms["filter"]).serializeJsonFilter());
        }

        function openDialog(id) {

            var url = '@Url.Content("~/SecuritySettings/Organization/Edit")';
            url = url + "?ParentId=" + jQuery("#hiParentId").val();
            if (id) {
                url += "&id=" + id;
            }
            f_OpenDialog(url, { maximized: false, width: 600, height: 400 });

        }


        function f_Add() {

            openDialog();

        }

        function f_Delete() {

            var row = $dg1.datagrid("getSelected");
            if (row) {

                var url = '@Url.Content("~/SecuritySettings/Organization/Delete")';
                f_AjaxDelete(url, $dg1, function () {
                    parent.f_ReloadMenuTree();
                });

            } else {
                $.messager.alert('提示', '请先选择记录！');
            }


        }

        function f_Edit()
        {
            var row = $dg1.datagrid("getSelected");
            if (row) {

                openDialog(row.MenuId);

            } else {
                $.messager.alert('提示', '请先选择记录！');
            }
        }

    </script>

}

<table id="dg1"></table>
<div id="dg1Toolbar" style="padding:5px;height:auto">
    <div style="margin-bottom:5px">
        <a id="aAdd" href="javascript:void(0);" onclick="f_Add();" class="easyui-linkbutton" iconcls="icon-add" plain="true">新增</a>
        <a id="aEdit" href="javascript:void(0);" onclick="f_Edit();" class="easyui-linkbutton" iconcls="icon-edit" plain="true">修改</a>
        <a id="aDelete" href="javascript:void(0);" onclick="f_Delete();" class="easyui-linkbutton" iconcls="icon-remove" plain="true">删除</a>
    </div>
    <div>
        <form name="filter">
            <div>
                <input type="hidden" id="hiParentId" name="ParentId" value='@ViewBag.ParentId' />
            </div>
            <div>
                部门名：<input name="Name" class="textbox" type="text" style="width:150px">
                <a href="javascript:void(0);" onclick="f_Search();" class="easyui-linkbutton" iconcls="icon-search">查询</a>
            </div>
        </form>
    </div>
</div>